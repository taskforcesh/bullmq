{
  "name": "bullmq-python",
  "description": "Queue for messages and jobs based on Redis for python",
  "author": "Taskforce.sh Inc.",
  "license": "MIT",
  "keywords": [
    "bullmq",
    "python"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "semantic-release": "semantic-release",
    "semantic-release:debug": "semantic-release --no-ci --dry-run --debug"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.6",
    "@semantic-release/release-notes-generator": "14.1.0",
    "semantic-release": "25.0.3",
    "semantic-release-pypi": "5.1.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "tagFormat": "vpy${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "message": "!(*\\(python\\)*|*\\[python\\]*)",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "presetConfig": {
            "ignoreCommits": "^(?![^]*\\(python\\))(?![^]*\\[python\\]).*$"
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "../docs/gitbook/python/changelog.md"
        }
      ],
      "semantic-release-pypi",
      "@semantic-release/github"
    ]
  },
  "packageManager": "yarn@1.22.22",
  "resolutions": {
    "ajv": "8.18.0"
  }
}
