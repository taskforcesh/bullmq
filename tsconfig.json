{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2017",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests/*"]
}
